{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rodar servidor PHP",
      "type": "shell",
      "command": "php",
      "args": ["-S", "localhost:8000", "-t", "public"],
      "group": {
        "kind": "build",
      },
			"options": {
        "cwd": "${workspaceFolder}/api-php"
      },
      "presentation": { "reveal": "always", "panel": "shared", "focus": true },
      "problemMatcher": []
    },
    {
      "label": "Run dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
			"group": {
        "kind": "build",
      },
      "options": {
        "cwd": "${workspaceFolder}/departamentos"
      },
      "presentation": { "reveal": "always", "panel": "shared", "focus": true },
      "problemMatcher": []
    }
  ]
}